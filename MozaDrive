    <script>
        // Menu mobile toggle
        document.querySelector('.mobile-menu-btn').addEventListener('click', function() {
            document.querySelector('.nav-links').classList.toggle('active');
        });
        
        // Fechar menu ao clicar num link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', function() {
                document.querySelector('.nav-links').classList.remove('active');
            });
        });
        
        // Funções para modal
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
            document.body.style.overflow = 'hidden';
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        // Fechar modal ao clicar fora do conteúdo
        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });
        
        // Selecionar método de pagamento
        function selectPayment(element) {
            // Remover seleção anterior
            document.querySelectorAll('.payment-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Adicionar seleção atual
            element.classList.add('selected');
            document.getElementById('payment-method').value = element.getAttribute('data-method');
        }
        
        // Form submission
        document.getElementById('booking-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validar método de pagamento
            const paymentMethod = document.getElementById('payment-method').value;
            if (!paymentMethod) {
                alert('Por favor, selecione um método de pagamento.');
                return;
            }
            
            // Gerar comprovativo
            generateReceipt();
            
            // Abrir modal de comprovativo
            openModal('modal-receipt');
        });
        
        // Gerar comprovativo
        function generateReceipt() {
            // Gerar número de reserva aleatório
            const reservationNumber = 'MD' + Math.floor(100000 + Math.random() * 900000);
            document.getElementById('receipt-number').textContent = reservationNumber;
            
            // Data atual
            const now = new Date();
            document.getElementById('receipt-date').textContent = now.toLocaleDateString('pt-MZ');
            
            // Preencher dados do cliente
            document.getElementById('receipt-client').textContent = document.getElementById('name').value;
            document.getElementById('receipt-contact').textContent = document.getElementById('phone').value;
            
            // Preencher dados do serviço
            const serviceSelect = document.getElementById('service');
            document.getElementById('receipt-service').textContent = serviceSelect.options[serviceSelect.selectedIndex].text;
            
            const vehicleSelect = document.getElementById('car-type');
            document.getElementById('receipt-vehicle').textContent = vehicleSelect.options[vehicleSelect.selectedIndex].text;
            
            // Período de reserva
            const startDate = document.getElementById('start-date').value;
            const endDate = document.getElementById('end-date').value;
            document.getElementById('receipt-period').textContent = `${formatDate(startDate)} a ${formatDate(endDate)}`;
            
            // Método de pagamento
            const paymentMethod = document.getElementById('payment-method').value;
            document.getElementById('receipt-payment').textContent = getPaymentMethodName(paymentMethod);
            
            // Instruções de pagamento
            document.getElementById('payment-instructions').innerHTML = getPaymentInstructions(paymentMethod);
        }
        
        // Formatar data
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('pt-MZ');
        }
        
        // Obter nome do método de pagamento
        function getPaymentMethodName(method) {
            switch(method) {
                case 'mpesa': return 'Mpesa';
                case 'emola': return 'eMola';
                case 'visa': return 'Cartão Visa';
                case 'mastercard': return 'Cartão Mastercard';
                default: return method;
            }
        }
        
        // Obter instruções de pagamento
        function getPaymentInstructions(method) {
            switch(method) {
                case 'mpesa':
                    return `
                        <ol>
                            <li>Abra a aplicação Mpesa no seu telemóvel</li>
                            <li>Selecione "Pagamentos"</li>
                            <li>Digite o número: <strong>850 667 970</strong></li>
                            <li>Introduza o valor: <strong>15.000,00 MZN</strong></li>
                            <li>Adicione a referência: <strong>${document.getElementById('receipt-number').textContent}</strong></li>
                            <li>Confirme a transação</li>
                        </ol>
                        <p>Envie o comprovativo para o WhatsApp: <strong>876 667 970</strong></p>
                    `;
                case 'emola':
                    return `
                        <ol>
                            <li>Abra a aplicação eMola no seu telemóvel</li>
                            <li>Selecione "Transferir"</li>
                            <li>Digite o número: <strong>850 667 970</strong></li>
                            <li>Introduza o valor: <strong>15.000,00 MZN</strong></li>
                            <li>Adicione a referência: <strong>${document.getElementById('receipt-number').textContent}</strong></li>
                            <li>Confirme a transação</li>
                        </ol>
                        <p>Envie o comprovativo para o WhatsApp: <strong>876 667 970</strong></p>
                    `;
                case 'visa':
                case 'mastercard':
                    return `
                        <p>Iremos contactá-lo dentro de 24 horas para processar o seu pagamento com cartão de crédito/débito.</p>
                        <p>Alternativamente, pode contactar-nos directamente pelo WhatsApp: <strong>876 667 970</strong></p>
                    `;
                default:
                    return `<p>Contacte-nos para instruções de pagamento: <strong>850 667 970</strong></p>`;
            }
        }
        
        // Imprimir comprovativo
        function printReceipt() {
            const printContent = document.getElementById('modal-receipt').innerHTML;
            const originalContent = document.body.innerHTML;
            
            document.body.innerHTML = printContent;
            window.print();
            document.body.innerHTML = originalContent;
            
            // Recarregar a página após impressão
            location.reload();
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>
