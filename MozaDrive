    <!-- Modal de Comprovativo -->
    <div id="modal-receipt" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeModal('modal-receipt')">&times;</span>
            
            <div class="receipt">
                <div class="receipt-header">
                    <h2>Comprovativo de Reserva</h2>
                    <p>MozaDrive - Aluguer de Viaturas</p>
                    <p>Nº da Reserva: <span id="receipt-number"></span></p>
